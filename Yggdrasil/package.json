{
  "name": "yggdrasil",
  "version": "1.0.0",
  "main": "main.ts",
  "scripts": {
    "dev": "nodemon -L --inspect=0.0.0.0 main.js",
    "start": "etsc && node ./dist/main.js",
    "test": "jest --coverage",
    "up": "npm i && npm run start",
    "depcruise:validate": "depcruise src --include-only '^src' --config --output-type err-long",
    "depcruise:tree": "depcruise src --include-only '^src' --config --output-type dot | dot -T svg > dependency-graph.svg && open dependency-graph.svg",
    "pretty": "prettier --write \"./**/*.{js,jsx,mjs,cjs,ts,tsx,json}\"",
    "socket-manager": "etsc src/utils/socket-manager.ts && node dist/utils/socket-manager.js",
    "logs:table": "tail -f table.log",
    "logs:full": "tail -f full.log"
  },
  "devDependencies": {
    "@sprucelabs/jest-json-reporter": "^8.0.331",
    "@sprucelabs/test": "^9.0.44",
    "@sprucelabs/test-utils": "^5.1.274",
    "@types/blessed": "^0.1.25",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/module-alias": "^2.0.4",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "blessed": "^0.1.81",
    "dependency-cruiser": "^16.3.2",
    "esbuild": "^0.21.3",
    "esbuild-node-tsc": "^2.0.5",
    "eslint": "8.57.0",
    "eslint-config-spruce": "^11.2.26",
    "jest": "^29.7.0",
    "jest-circus": "^29.7.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "midi": "^2.0.0",
    "module-alias": "^2.2.3",
    "ws": "^8.17.0"
  },
  "jest": {
    "testRunner": "jest-circus/runner",
    "maxWorkers": 4,
    "testTimeout": 120000,
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/tmp/",
      "<rootDir>/src/",
      "<rootDir>/node_modules/",
      "<rootDir>/build/__tests__/testDirsAndFiles/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js?(x)"
    ],
    "moduleNameMapper": {
      "^#spruce/(.*)$": "<rootDir>/build/.spruce/$1"
    }
  }
}
