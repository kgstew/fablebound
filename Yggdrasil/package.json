{
    "name": "yggdrasil",
    "version": "1.0.0",
    "main": "main.ts",
    "scripts": {
        "dev": "nodemon -L --inspect=0.0.0.0 main.js",
        "start": "etsc && node ./dist/main.js",
        "test": "jest --coverage",
        "up": "npm i && npm run start",
        "depcruise:validate": "depcruise src --include-only '^src' --config --output-type err-long",
        "depcruise:tree": "depcruise src --include-only '^src' --config --output-type dot | dot -T svg > dependency-graph.svg && open dependency-graph.svg",
        "pretty": "prettier --write \"./**/*.{js,jsx,mjs,cjs,ts,tsx,json}\"",
        "socket-manager": "etsc src/app/websockets/client/socket-manager.ts && node dist/app/websockets/client/socket-manager.js",
        "logs:table": "tail -f table.log",
        "logs:full": "tail -f full.log"
    },
    "devDependencies": {
        "@types/blessed": "^0.1.25",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/module-alias": "^2.0.4",
        "@typescript-eslint/eslint-plugin": "^7.9.0",
        "@typescript-eslint/parser": "^7.9.0",
        "blessed": "^0.1.81",
        "dependency-cruiser": "^16.3.2",
        "esbuild": "^0.21.3",
        "esbuild-node-tsc": "^2.0.5",
        "eslint": "8.57.0",
        "jest": "^29.7.0",
        "nodemon": "^3.1.0",
        "prettier": "^3.2.5",
        "ts-jest": "^29.1.2",
        "@types/ws": "^8.5.10"
    },
    "dependencies": {
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "module-alias": "^2.2.3",
        "ws": "^8.17.0"
    }
}
